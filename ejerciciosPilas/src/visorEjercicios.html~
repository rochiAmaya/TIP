	<script>
		function nombreDeClase()
		{
		    var hash = window.location.href.slice(window.location.href.indexOf('?') + 1);
		    var name = hash.split('=')[1];
		    if (name) {
		    	return name;
		    }else{
		    	return "ElObreroCopado";
		    }
		};
		
		var canvas_element = document.getElementById('canvas');
		window['canvas'] = canvas_element;
		pilasengine.iniciar({ancho: 420, alto: 480, canvas: canvas_element, data_path: 'data', imagenesExtra: ['fondos/fondoObrero.png', 'fondos/nubes.png', 'casillaLightbot.png', 'perro_cohete.png', 'hueso.png']});
		
		eval('pilas.mundo.gestor_escenas.cambiar_escena(new ' + nombreDeClase() + '());');
		
		pilas.ejecutar();
	 </script>


